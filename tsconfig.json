{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"removeComments": true,
		"outDir": "dist",
		"noImplicitAny": true,
		"sourceMap": false,
		"watch": false,
		"esModuleInterop": true,
		"rootDir": "src",
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}